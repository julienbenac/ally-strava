{
  "name": "@julienbenac/ally-strava",
  "description": "Strava driver for AdonisJS Ally",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.17.0"
  },
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "prebuild": "npm run format && npm run lint:fix",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "release": "npx release-it",
    "taze": "npx taze"
  },
  "homepage": "https://github.com/julienbenac/ally-strava#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julienbenac/ally-strava.git"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/eslint-config": "^2.1.2",
    "@adonisjs/prettier-config": "^1.4.5",
    "@adonisjs/tsconfig": "^1.4.1",
    "@swc/core": "^1.13.5",
    "@types/node": "^22.18.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "release-it": "^19.0.4",
    "taze": "^19.5.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@poppinss/utils": "^6.10.1"
  },
  "peerDependencies": {
    "@adonisjs/ally": "^5.1.1",
    "@adonisjs/core": "^6.19.0"
  },
  "author": "Julien Benac <contact@julienbenac.fr>",
  "license": "MIT",
  "keywords": [
    "adonisjs",
    "ally",
    "strava",
    "oauth2",
    "openid"
  ],
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  }
}
